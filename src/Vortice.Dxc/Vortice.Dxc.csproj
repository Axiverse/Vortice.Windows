<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="SharpGenTools.Sdk" Version="$(SharpGenVersion)" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
    <Description>A .NET wrapper for Microsoft's DirectXShaderCompiler.</Description>
    <RootNamespace>Vortice.Dxc</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <SharpGenMapping Include="Mappings.xml" />
    <PackageReference Include="SharpGen.Runtime.COM" Version="$(SharpGenVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\net461\Vortice.Dxc.props" PackagePath="build\net461\Vortice.Dxc.props" />
    <None Include="runtimes\win-x64\native\dxil.dll"
              Link="runtimes\win-x64\native\dxil.dll"
              Visible="False"
              CopyToOutputDirectory="PreserveNewest"
              PackFolder="runtimes\win-x64\native" />
    <None Include="runtimes\win-x64\native\dxcompiler.dll"
              Link="runtimes\win-x64\native\dxcompiler.dll"
              Visible="False"
              CopyToOutputDirectory="PreserveNewest"
              PackFolder="runtimes\win-x64\native" />
  </ItemGroup>

</Project>
