?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_Vortice_XAudio2_NativeRuntime Condition=" '$(_Vortice_XAudio2_NativeRuntime)' == '' And ('$(Prefer32Bit)' == 'false' Or '$(PlatformTarget)' == 'x64')">win-x64</_Vortice_XAudio2_NativeRuntime>
    <_Vortice_XAudio2_NativeRuntime Condition=" '$(_Vortice_XAudio2_NativeRuntime)' == '' And ('$(Prefer32Bit)' == 'true' Or '$(PlatformTarget)' == 'x86')">win-x86</_Vortice_XAudio2_NativeRuntime>
  </PropertyGroup>
  <ItemGroup>
    <Content Condition="'$(_Vortice_XAudio2_NativeRuntime)' != ''" Include="$(MSBuildThisFileDirectory)..\..\runtimes\$(_Vortice_XAudio2_NativeRuntime)\native\xaudio2_9redist.dll">
      <Link>%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Visible>False</Visible>
    </Content>
  </ItemGroup>
</Project>
